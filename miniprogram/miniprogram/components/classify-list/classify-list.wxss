/* 商品展示区域 */
.classify-list {
  height: 100%;
  display: flex;
  border-top: 1px solid rgb(245, 245, 245);
  box-sizing: border-box;
  font-size: 32rpx;
}
/* 左边内容 */
.container-left {
  width: 225rpx;
  height: 100%;
  border-right: 1px solid rgb(245, 245, 245);
  box-sizing: border-box;
  overflow-y: scroll;
  overflow-x: hidden;
  text-align: center;
}
.left-list {
  padding: 20rpx;
}
.left-list + .left-list {
  border-top: 1px solid rgb(245, 245, 245);
}
.left-list .button {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
}
/* 右边内容 */
.container-right {
  width: 525rpx;
  height: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
}
.right-list {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  position: relative;
}
.right-list + .right-list {
  border-top: 1px solid rgb(245, 245, 245);
}
.right-list > image:first-child {
  width: 180rpx;
  height: 180rpx;
}
.right-list > image:last-child {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  right: 20rpx;
  top: 20rpx;
}
.right-list-content {
  display: flex;
  flex-direction: column;
  width: calc(100% - 200rpx);
  align-items: center;
}
.right-list-content > .price {
  color: #f33;
}
.right-list-content .button {
  width: 200rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.right-list-content .btn {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  text-align: center;
  color: #f33;
  border-radius: 50%;
  box-shadow: 0 0 6rpx #ccc;
}
.right-list-content > text {
  margin-bottom: 20rpx;
}
.right-bottom {
  display: inline-block;
  width: 100%;
  padding: 60rpx;
  border-top: 1px solid rgb(245, 245, 245);
  text-align: center;
  background-color: #fff;
  color: #ccc;
}
.btn-icon {
  width: 50rpx;
  height: 50rpx;
}
.active {
  background-color: #fff;
  color: #f33;
}
/* 透明输入框 */
.input {
  width: 100%;
  height: 100%;
  z-index: 999;
  background-color: rgb(0, 0, 0, 0.1);
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  justify-content: left;
}
.input > input {
  width: 60%;
  background-color: #fff;
  padding: 10px;
  border-bottom: 1px solid rgb(245, 245, 245);
}
.input > button {
  margin: 0;
  height: 44px;
  line-height: 44px;
  width: 20%;
}
.hidden {
  display: none;
}

/* 平板尺寸 */
@media (min-width: 768px) {
  /* 商品展示区域 */
  .classify-list {
    font-size: 24rpx;
  }
  .right-list-content .btn {
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
  }
}
