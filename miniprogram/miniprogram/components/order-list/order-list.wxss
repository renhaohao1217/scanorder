.order-list {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  position: relative;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgb(245, 245, 245);
}
.order-list > image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.order-list > text:nth-child(3) {
  color: #f33;
}
.order-list > text:nth-child(4) {
  position: absolute;
  right: 20rpx;
}
