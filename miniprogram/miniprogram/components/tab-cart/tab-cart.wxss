/* 底部购物车 */
.order-footer {
  width: 100%;
  height: 100rpx;
  border: 1px solid rgb(245, 245, 245);
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 40rpx;
  z-index: 99;
  background-color: #fff;
}
.order-footer > .number {
  width: 80rpx;
  position: relative;
}
.order-footer > .number > image {
  width: 80rpx;
  height: 80rpx;
}
.order-footer > text {
  display: inline-block;
  width: 200rpx;
  text-align: center;
  font-weight: bold;
  color: #f33;
}
.order-footer > button {
  margin: 0;
}
.order-footer > .number > text {
  display: inline-block;
  width: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 28rpx;
  border-radius: 50%;
  color: #fff;
  background-color: #f33;
  text-align: center;
  position: absolute;
  left: 42rpx;
  top: -22rpx;
}
.button {
  width: 360rpx !important;
  background-color: #f33;
  color: #fff;
}

/* 平板尺寸 */
@media (min-width: 768px) {
  /* 底部购物车 */
  .order-footer {
    height: 68rpx;
    padding: 0 28rpx;
  }
  .order-footer > .number {
    width: 54rpx;
  }
  .order-footer > .number > image {
    width: 54rpx;
    height: 54rpx;
  }
  .order-footer > text {
    width: 134rpx;
    font-size: 24rpx;
  }
  .order-footer > .number > text {
    width: 34rpx;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 18rpx;
    left: 28rpx;
    top: -14rpx;
  }
}
