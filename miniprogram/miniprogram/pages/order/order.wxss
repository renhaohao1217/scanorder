/* 容器 */
.order-container {
  display: flex;
  justify-content: space-around;
  margin-top: 30px;
}
.order-box {
  width: 200rpx;
  padding: 40rpx;
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: 0 0 20rpx #ccc;
  text-align: center;
}
.order-box > image {
  width: 200rpx;
  height: 200rpx;
}
.order-box > text {
  font-size: 36rpx;
}

/* 平板尺寸 */
@media (min-width: 768px) {
  .order-box {
    width: 134rpx;
  }
  .order-box > image {
    width: 134rpx;
    height: 134rpx;
  }
  .order-box > text {
    font-size: 24rpx;
  }
}
