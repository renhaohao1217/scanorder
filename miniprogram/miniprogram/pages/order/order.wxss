.order-container {
  display: flex;
  justify-content: space-around;
  margin-top: 30px;
}
.order-box {
  width: 200rpx;
  padding: 40rpx;
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: 0 0 20rpx #ccc;
  text-align: center;
}
.order-box image {
  width: 200rpx;
  height: 200rpx;
}
.order-box text {
  font-size: 36rpx;
}
