<navigation-bar img_source="/images/back-black.png" icon="back" title="自助点餐"></navigation-bar>
<!-- 点餐界面 -->
<view class="order">
  <!-- 商家信息 -->
  <view class="order-shop">
    <view class="shop-content">
      <text class="shop-name">商家名称</text>
      <text class="shop-address">商家地址</text>
    </view>
    <image class="shop-logo" src="http://chuantu.xyz/t6/740/1599547544x2073446523.jpg"></image>
  </view>
  <!-- 商品列表 -->
  <view class="order-container">
    <classify-list result="{{result}}" results="{{results}}" bindmyevent="myevent"></classify-list>
  </view>
  <!-- 底部购物车 -->
  <view class="order-footer">
    <view class="number">
      <image class="number" src="http://chuantu.xyz/t6/740/1599547544x2073446523.jpg"></image>
      <text>{{num}}</text>
    </view>
    <text>￥{{sum}}</text>
    <button type="warn">选好了</button>
  </view>
</view>