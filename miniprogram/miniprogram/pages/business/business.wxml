<!-- 导航栏 -->
<navigation-bar icon="{{true}}" title="{{title}}"></navigation-bar>
<!-- 点餐界面 -->
<view class="order" style="{{'height:' + height}}" catchtap="cancel" data-target="page">
  <!-- 商家信息 -->
  <view class="order-shop">
    <view class="shop-content">
      <text class="shop-name">{{shop}}</text>
      <text class="shop-address">{{region}}{{address}}</text>
    </view>
    <image class="shop-logo" src="{{image}}"></image>
  </view>
  <!-- 商品列表 -->
  <view class="order-container">
    <classify-list classify_arr="{{classify_arr}}" goods_arr="{{goods_arr}}" bindmyevent="myevent"></classify-list>
  </view>
  <!-- 底部购物车 -->
  <view class="order-footer">
    <view class="number" catchtap="show">
      <image class="number" src="/images/cart.png"></image>
      <text>{{num}}</text>
    </view>
    <text class="cf33">￥{{sum}}</text>
    <button class="button" bindtap="pay">去结算</button>
  </view>
  <!-- 购物车详细信息展示 -->
  <view class="order-cart {{hidden? 'hidden' : '' }}">
    <view class="clear" bindtap="clear">清空购物车</view>
    <view>
      <view class="cart-list" wx:for="{{cart_arr}}" wx:key="index">
        <image src="{{item.goodsList[0].image}}"></image>
        <view>
          <text>{{item.goodsList[0].title}}</text>
          <text>￥{{item.goodsList[0].price}}</text>
          <view>
            <text data-count="-" data-index="{{index}}" catchtap="calc">-</text>
            <text>{{item.amount}}</text>
            <text data-count="+" data-index="{{index}}" catchtap="calc">+</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>