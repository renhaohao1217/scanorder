.order {
  position: relative;
}
/* 商家信息 */
.order-shop {
  height: 100rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}
.shop-content {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.shop-name {
  font-size: 40rpx;
}
.shop-address {
  font-size: 24rpx;
}
.shop-logo {
  width: 100rpx;
  height: 100rpx;
}
/* 商品内容区域 */
.order-container {
  height: calc(100% - 240rpx);
}
/* 底部购物车 */
.order-footer {
  width: 100%;
  height: 100rpx;
  border: 1px solid rgb(245, 245, 245);
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 40rpx;
  z-index: 99;
}
.order-footer > .number {
  width: 80rpx;
  position: relative;
}
.order-footer > .number > image {
  width: 80rpx;
  height: 80rpx;
}
.order-footer > text {
  display: inline-block;
  width: 200rpx;
  text-align: center;
  font-weight: bold;
}
.order-footer > button {
  margin: 0;
}
.order-footer > .number > text {
  display: inline-block;
  width: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 28rpx;
  border-radius: 50%;
  color: #fff;
  background-color: #f33;
  text-align: center;
  position: absolute;
  left: 42rpx;
  top: -22rpx;
}
/* 购物车详细展示 */
.order-cart {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 100rpx;
  background-color: #fff;
}
.order-cart > .clear {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #f40;
  color: #fff;
  border-radius: 10rpx 10rpx 0 0;
}
.order-cart > view:nth-child(2) {
  max-height: 560rpx;
  overflow-y: scroll;
}
.order-cart .cart-list {
  display: flex;
  width: 100%;
  padding: 20rpx;
  position: relative;
  box-sizing: border-box;
}
.cart-list + .cart-list {
  border-top: 1px solid rgb(245, 245, 245);
}
.cart-list > image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 10px;
}
.cart-list > view > text:nth-child(1) {
  display: block;
  font-size: 36rpx;
}
.cart-list > view > text:nth-child(2) {
  color: #f33;
  font-size: 28rpx;
}
.cart-list > view > view {
  display: inline-block;
  position: absolute;
  right: 20rpx;
}
.cart-list > view > view > text:nth-child(1),
.cart-list > view > view > text:nth-child(3) {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 10rpx;
  line-height: 40rpx;
  text-align: center;
  border: 1px solid #f40;
}
.cart-list > view > view > text:nth-child(2) {
  padding: 0 10rpx;
}
.button {
  width: 360rpx !important;
}

/* 平板尺寸 */
@media (min-width: 768px) {
  /* 商家信息 */
  .order-shop {
    height: 68rpx;
  }
  .shop-name {
    font-size: 28rpx;
  }
  .shop-address {
    font-size: 16rpx;
  }
  .shop-logo {
    width: 68rpx;
    height: 68rpx;
  }
  /* 商品内容区域 */
  .order-container {
    height: calc(100% - 174rpx);
  }
  /* 底部购物车 */
  .order-footer {
    height: 68rpx;
    padding: 0 28rpx;
  }
  .order-footer > .number {
    width: 54rpx;
  }
  .order-footer > .number > image {
    width: 54rpx;
    height: 54rpx;
  }
  .order-footer > text {
    width: 134rpx;
    font-size: 24rpx;
  }
  .order-footer > .number > text {
    width: 34rpx;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 18rpx;
    left: 28rpx;
    top: -14rpx;
  }
  /* 购物车详细展示 */
  .order-cart {
    bottom: 68rpx;
  }
  .order-cart > view:nth-child(2) {
    max-height: 440rpx;
  }
  .order-cart > .clear {
    height: 54rpx;
    line-height: 54rpx;
    font-size: 22rpx;
  }
  .cart-list > image {
    width: 68rpx;
    height: 68rpx;
  }
  .cart-list > view > text:nth-child(1) {
    font-size: 26rpx;
  }
  .cart-list > view > text:nth-child(2) {
    font-size: 18rpx;
  }
}

.hidden {
  display: none;
}
