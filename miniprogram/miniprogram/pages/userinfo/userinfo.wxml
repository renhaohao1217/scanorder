<!-- 导航栏 -->
<navigation-bar icon="{{true}}" title="个人信息"></navigation-bar>
<!-- 内容 -->
<view class="userinfo-container">
  <!-- 头像 -->
  <view class="userinfo-list" bindtap="update_image">
    <view>
      <text>头像</text>
      <image src="{{image}}"></image>
    </view>
    <image class="more" src="/images/more.png"></image>
  </view>
  <!-- 用户名 -->
  <view class="userinfo-list">
    <view>
      <text>用户名</text>
      <input value="{{username}}" type="text" placeholder="6-20个字母,数字,_,-,字母开头" bindinput="input_model" bindblur="check" data-target="username"></input>
    </view>
    <image class="more" src="/images/more.png"></image>
  </view>
  <!-- 手机号 -->
  <view class="userinfo-list">
    <view>
      <text>手机号码</text>
      <input value="{{phone}}" type="number" bindinput="input_model" bindblur="check" data-target="phone"></input>
    </view>
    <image class="more" src="/images/more.png"></image>
  </view>
  <!-- 店铺名称 -->
  <view class="userinfo-list">
    <view>
      <text>店铺名称</text>
      <input value="{{shop}}" type="text" bindinput="input_model" bindblur="check" data-target="shop"></input>
    </view>
    <image class="more" src="/images/more.png"></image>
  </view>
  <!-- 店铺地址 -->
  <view class="userinfo-list">
    <view>
      <text>店铺地址</text>
      <input value="{{address}}" type="text" bindinput="input_model" bindblur="check" data-target="address"></input>
    </view>
    <image class="more" src="/images/more.png"></image>
  </view>
</view>