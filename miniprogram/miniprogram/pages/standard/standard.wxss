.standard-container {
  padding: 40rpx;
}
.standard-logo {
  text-align: center;
}
.logo-image {
  width: 200rpx;
  height: 200rpx;
}
.logo-tips {
  display: block;
  color: #696969;
  font-size: 24rpx;
}
.standard-container > input,
.standard-container > textarea {
  border: 1px solid #ccc;
  padding: 5px;
  margin: 5px 0;
  border-radius: 5px;
}
.standard-container > textarea {
  height: 60px;
}
.standard-container > button {
  width: 100%;
}
